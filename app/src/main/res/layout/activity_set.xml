<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5sp"
    tools:context=".SetActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/set_activity_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/back_set_fab"
            app:layout_constraintRight_toRightOf="@+id/button_save_set" />

        <Button
            android:id="@+id/button_save_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textSize="24sp"
            android:onClick="onSaveSetButtonClick"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/back_set_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/back"
            android:onClick="onBackButtonClick"
            android:src="@drawable/ic_arrow_back"
            app:fabSize="mini"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/set_name_edittext_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerGroup">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/set_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/set_name"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLength="80"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.google.android.material.textfield.TextInputLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="4"
        android:rowCount="3"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/set_name_edittext_input_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_delete_set">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/available_songs"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_columnWeight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:text="@string/selected_songs"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_columnWeight="1" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/available_song_titles_edittext_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/available_song_titles_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/search_songs"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="80"
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:textSize="24sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/available_songs_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1" />

        <ImageButton
            android:id="@+id/deselect_song_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/deselect_song"
            android:onClick="deselectSong"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/ic_arrow_left" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/selected_songs_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_rowSpan="2"
            android:layout_columnWeight="1" />

        <ImageButton
            android:id="@+id/move_up_song_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/move_song_up"
            android:onClick="moveSongUp"
            android:layout_row="1"
            android:layout_column="3"
            android:src="@drawable/ic_arrow_up" />

        <ImageButton
            android:id="@+id/select_song_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/select_song"
            android:onClick="selectSong"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/ic_arrow_right" />

        <ImageButton
            android:id="@+id/move_down_song_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/move_song_down"
            android:onClick="moveSongDown"
            android:layout_row="2"
            android:layout_column="3"
            android:src="@drawable/ic_arrow_down" />

    </GridLayout>

    <Button
        android:id="@+id/button_delete_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_set"
        android:textSize="24sp"
        android:onClick="onDeleteSetButtonClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>