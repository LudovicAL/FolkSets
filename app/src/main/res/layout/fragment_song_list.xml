<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SongListFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/songListEditText_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/song_sort_spinner"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/songListEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/search_songs"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLength="80"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/song_sort_spinner"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/songListEditText_input_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/songToggleButtonGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:soundEffectsEnabled="true"
        app:checkedButton="@id/toggleButtonTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songListEditText_input_layout"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggleButtonTitle"
            style="?attr/materialButtonOutlinedStyle"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggleButtonTag"
            style="?attr/materialButtonOutlinedStyle"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tag" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggleButtonComposer"
            style="?attr/materialButtonOutlinedStyle"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/composer" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggleButtonRegion"
            style="?attr/materialButtonOutlinedStyle"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/region" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggleButtonKey"
            style="?attr/materialButtonOutlinedStyle"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/key" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggleButtonPlayedBy"
            style="?attr/materialButtonOutlinedStyle"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/played_by" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/songListRecyclerView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/songToggleButtonGroup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>