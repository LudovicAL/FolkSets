<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5sp">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back_from_edit_song_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/edit"
        android:src="@drawable/ic_half_arrow_left"
        app:fabSize="mini"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nav_song_header_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_song"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/back_from_edit_song_fab"
        app:layout_constraintRight_toLeftOf="@+id/button_save_song" />

    <Button
        android:id="@+id/button_save_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/nav_header_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="back_from_edit_song_fab,nav_song_header_textview,button_save_song" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:columnCount="2"
        android:orientation="horizontal"
        android:padding="3sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_header_barrier">

        <TextView
            android:id="@+id/nav_song_titles_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|end"
            android:layout_margin="3sp"
            android:background="#FFFFFF"
            android:padding="3sp"
            android:singleLine="true"
            android:text="@string/titles"
            android:textAlignment="viewEnd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/nav_song_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="text"
            android:hint="@string/title_input"
            android:maxLength="80"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:layout_margin="3sp"
            android:padding="3sp"
            android:background="#FFFFFF"
            android:layout_gravity="start|end" />

        <TextView
            android:id="@+id/nav_song_tags_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|end"
            android:layout_margin="3sp"
            android:background="#FFFFFF"
            android:padding="3sp"
            android:singleLine="true"
            android:text="@string/tags"
            android:textAlignment="viewEnd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/nav_song_tags_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="text"
            android:hint="@string/tag_input"
            android:maxLength="80"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:layout_margin="3sp"
            android:padding="3sp"
            android:background="#FFFFFF"
            android:layout_gravity="start|end" />

        <TextView
            android:id="@+id/nav_song_composer_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|end"
            android:layout_margin="3sp"
            android:background="#FFFFFF"
            android:padding="3sp"
            android:singleLine="true"
            android:text="@string/composer"
            android:textAlignment="viewEnd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/nav_song_composer_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="text"
            android:hint="@string/composer_input"
            android:maxLength="80"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:layout_margin="3sp"
            android:padding="3sp"
            android:background="#FFFFFF"
            android:layout_gravity="start|end" />

        <TextView
            android:id="@+id/nav_song_region_hint_textview"
