            android:maxLength="80"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:layout_margin="3sp"
            android:padding="3sp"
            android:background="#FFFFFF"
            android:layout_gravity="start|end" />

        <TextView
            android:id="@+id/nav_song_filePath_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|end"
            android:layout_margin="3sp"
            android:background="#D8D8D8"
            android:padding="3sp"
            android:singleLine="true"
            android:text="@string/file_path"
            android:textAlignment="viewEnd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nav_song_filePath_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|end"
            android:layout_margin="3sp"
            android:background="#D8D8D8"
            android:padding="3sp"
            android:singleLine="true"
            android:text="@string/placeholder"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/nav_song_fileType_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|end"
            android:layout_margin="3sp"
            android:background="#D8D8D8"
            android:padding="3sp"
            android:singleLine="true"
            android:text="@string/file_type"
            android:textAlignment="viewEnd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nav_song_fileType_textview"
