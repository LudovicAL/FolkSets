            android:layout_margin="3sp"
            android:background="#FFFFFF"
            android:padding="3sp"
            android:singleLine="true"
            android:text="@string/region_of_origin"
            android:textAlignment="viewEnd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/nav_song_region_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="text"
            android:hint="@string/region_of_origin_input"
            android:maxLength="80"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:layout_margin="3sp"
            android:padding="3sp"
            android:background="#FFFFFF"
            android:layout_gravity="start|end" />

        <TextView
            android:id="@+id/nav_song_key_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|end"
            android:layout_margin="3sp"
            android:background="#FFFFFF"
            android:padding="3sp"
            android:singleLine="true"
            android:text="@string/key"
            android:textAlignment="viewEnd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/nav_song_key_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="text"
            android:hint="@string/key_input"
            android:maxLength="80"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:layout_margin="3sp"
            android:padding="3sp"
            android:background="#FFFFFF"
            android:layout_gravity="start|end" />

        <TextView
            android:id="@+id/nav_song_incipit_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|end"
            android:layout_margin="3sp"
            android:background="#FFFFFF"
            android:padding="3sp"
            android:singleLine="true"
            android:text="@string/incipit"
            android:textAlignment="viewEnd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/nav_song_incipit_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="text"
            android:hint="@string/incipit_input"
            android:maxLength="80"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:layout_margin="3sp"
            android:padding="3sp"
            android:background="#FFFFFF"
            android:layout_gravity="start|end" />

        <TextView
            android:id="@+id/nav_song_form_hint_textview"
            android:layout_width="wrap_content"
