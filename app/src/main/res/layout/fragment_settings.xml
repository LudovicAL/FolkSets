<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <Button
        android:id="@+id/settingsSelectStorageDirectoryButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/selectStorageDirectory"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/settingStorageDirectoryTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/selectStorageDirectory"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/settingsSelectStorageDirectoryButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/settingExportDatabaseButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/exportDatabaseToStorage"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/settingStorageDirectoryTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/settingImportDatabaseButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/importDatabaseFromStorage"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/settingExportDatabaseButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>